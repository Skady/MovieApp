<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cinemaapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaApp">
        <activity
            android:name=".ListAllMoviesActivity"
            android:label="@string/title_activity_list_all_movies"
            android:theme="@style/Theme.CinemaApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieDetailsActivity" />
        <activity
            android:name=".ListMoviesActivity"
            android:label="@string/title_activity_list_movies"
            android:theme="@style/Theme.CinemaApp.NoActionBar"></activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>